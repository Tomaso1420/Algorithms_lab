<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:Lab1"
             BackgroundColor="White"
             x:Class="Lab1.MainPage">
    
    <StackLayout>
        <GraphicsView x:Name="graphicsView"
                      WidthRequest="600"
                      HeightRequest="500"
                      BackgroundColor="BlanchedAlmond"/>
        <StackLayout>
            <Button Text="Matrix Multi"
                    WidthRequest="100"
                    HeightRequest="50"
                    Background="Beige"
                    Clicked="MatrixMulti"/>

            <Entry Placeholder="Data"
                   TextChanged="OnEntryData"
                   WidthRequest="100"
                   HeightRequest="50"
                   TextColor="Black"/>

            <Entry Placeholder="Iterations"
                   TextChanged="OnEntryIterations"
                   WidthRequest="100"
                   HeightRequest="50"
                   TextColor="Black"/>

        </StackLayout>

    </StackLayout>
</ContentPage>

